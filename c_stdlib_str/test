cd "$1"

if [[ -f wchar ]]; then
	./wchar 'lÃ¼ç»¿ğŸ€' # Basic test, non-BMP character included

	./wchar 'æ ‡ï¼Œç‚¹ã€‚' # Test character classification (Chinese text)
	./wchar 'Î‘Î±, Î’Î².' # Test case mapping (Greek letters)

	LANG=ja_JP.UTF-8 ./wchar 'ã‹ãªã€€ã‚«ãƒŠ' # Test Japanese Kana mapping
	./wchar 'Ç±Ç²Ç³' # Test "totitle" mapping

	./wchar 'ÇšuÌˆÌŒ' # Combining characters (Latin)
	./wchar 'à¤•à¤¿' # Combining characters (Devanagari)
	./wchar 'í•œá„’á…¡á†«' # Conjoining Hangul Jamo

	./wchar '' # Empty test
	./wchar $'lÃ¼ç»¿\xf0\x9f\x8d' # Incomplete sequence
	echo
fi

if [[ -f uchar ]]; then
	./uchar 'lÃ¼ç»¿ğŸ€'
	./uchar '' # Empty test
	./uchar $'lÃ¼ç»¿\xf0\x9f\x8d' # Incomplete sequence
